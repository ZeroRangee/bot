# MVEU Telegram Bot Environment Variables

# Django Settings
DEBUG=False
SECRET_KEY=your-very-secret-key-here-change-this-in-production
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,localhost

# Database Settings (PostgreSQL)
POSTGRES_DB=mveu_bot
POSTGRES_USER=mveu_user
POSTGRES_PASSWORD=your-postgres-password

# Redis Settings
REDIS_PASSWORD=your-redis-password

# Telegram Bot Settings
TELEGRAM_BOT_TOKEN=your-telegram-bot-token

# OpenAI Settings
OPENAI_API_KEY=your-openai-api-key

# Django Superuser
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@mveu.ru
DJANGO_SUPERUSER_PASSWORD=secure-admin-password

# SSL (for production)
SSL_CERT_PATH=/path/to/your/certificate.pem
SSL_KEY_PATH=/path/to/your/private-key.pem